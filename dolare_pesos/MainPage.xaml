<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="dolare_pesos.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Label 
                Text="Dolar a Pesos(M)"
                TextColor="White"
                HorizontalOptions="Center"
                FontSize="30"
                />

            <Entry x:Name="dola" Placeholder="Dolares" PlaceholderColor="Gray" Margin="20"/>
            <Entry x:Name="peso" Placeholder="Pesos Mexicanos" PlaceholderColor="Gray" Margin="20"/>
            
            <Button 
                Text="Convertir" TextColor="White" BackgroundColor="DarkMagenta"  Clicked="Button_Clicked"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
